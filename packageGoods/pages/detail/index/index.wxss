.page {
  width: 100%;
  height: 100vh;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.page-scroll-view {
  flex: 1;
  height: 0;
}

.goods {
  background-color: #fff;
  margin: 0;
  padding-bottom: 200rpx;
}

.swiper-box {
  margin-top: 0;
  width: 100%;
  height: 750rpx;
  text-align: center;
  background-color: #F2F2F2;
}

.bannerimage {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.container {
  margin: 20rpx;
}

.container .time {
  flex-direction: row;
}

.container .time text {
  color: #AD2828;
  font-size: 32rpx;
}

.container .t1 {
  font-size: 36rpx;
  color: #333;
  line-height: 48rpx;
  margin: 16rpx 0;
}

.container .t2 {
  font-size: 26rpx;
  color: #333;
}

.container .t4 {
  font-size: 26rpx;
  color: #999;
}

.container .t5 {
  font-size: 22rpx;
  color: #333;
  line-height: 50rpx;
}

.container .t6 {
  font-size: 36rpx;
  color: #AD2828;
  margin-right: 100rpx;
}

.container .t8 {
  font-size: 26rpx;
  color: #333;
  text-align: center;
  margin-bottom: 34rpx;
}

.container .fdr {
  flex-direction: row;
  display: flex;
  margin-bottom: 16rpx;
}

.container .title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 34rpx;
}

.container.bt {
  border-top: 14rpx solid #f2f2f2;
  margin: 0;
  padding: 40rpx 32rpx;
}

.container .tips {
  background: #F2F2F2;
  padding: 36rpx 28rpx;
  margin-top: 40rpx;
}

.shopInfor {
  display: flex;
  border-top: 14rpx solid #f2f2f2;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.shopImage {
  width: 108rpx;
  height: 108rpx;
  margin-right: 16rpx;
  border-radius: 16rpx;
}

.shopName {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.shopDescrip {
  font-size: 24rpx;
  color: #999999;
  margin-top: 16rpx;
}

/* 商品详情样式 */
.description {
  width: 100%;
  box-sizing: border-box;
}

.description rich-text {
  width: 100%;
  overflow: hidden;
}

/* 底部购买栏样式 */
.fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: white;
  padding: 20rpx 32rpx;
  box-sizing: border-box;
  border-top: 2rpx solid #e9e9e9;
  z-index: 10;
}

.fixed .fdr {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 0;
}

.fixed .title {
  font-size: 32rpx;
  color: #333;
  margin: 0;
}

.ssinput {
  font-size: 28rpx;
  line-height: 80rpx;
  border-bottom: 2rpx solid #e3e3e3;
  margin-left: 40rpx;
  padding: 0 20rpx;
  flex: 1;
}

.buybtn {
  background-color: #AD2828;
  font-size: 36rpx;
  color: #fff;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.buybtn::after {
  border: none;
} 