.order-detail {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.status-section {
  background: #AD2828;
  padding: 40rpx 30rpx;
  color: #fff;
}

.status {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  display: block;
}

.desc {
  font-size: 26rpx;
  opacity: 0.8;
}

.address-section {
  background: #fff;
  margin-top: 20rpx;
  padding: 30rpx;
}

.title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.name-phone {
  margin-bottom: 10rpx;
}

.name {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.phone {
  font-size: 28rpx;
  color: #666;
}

.address {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.goods-section {
  background: #fff;
  margin-top: 20rpx;
  padding: 30rpx;
}

.goods-info {
  display: flex;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}

.goods-detail {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.goods-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  font-size: 30rpx;
  color: #AD2828;
  font-weight: 500;
}

.num {
  font-size: 26rpx;
  color: #999;
}

.order-info {
  background: #fff;
  margin-top: 20rpx;
  padding: 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 26rpx;
  color: #666;
}

.value {
  font-size: 26rpx;
  color: #333;
}

.logistics {
  background: #fff;
  margin-top: 20rpx;
  padding: 30rpx;
}

.logistics .content {
  display: flex;
  flex-direction: column;
}

.company {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.number {
  font-size: 26rpx;
  color: #666;
}

.btn-group {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #AD2828;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
} 