<view class="mine">
  <view class="user-info">
    <image class="avatar" src="{{userInfo.headImg || '/static/images/default-avatar.png'}}"></image>
    <view class="info">
      <text class="nickname">{{userInfo.name || t('mine.login')}}</text>
      <text class="phone">{{userInfo.phone || ''}}</text>
    </view>
  </view>

  <view class="menu-list">
    <view class="menu-item" bindtap="goToOrders">
      <image class="icon" src="/static/images/order.png"></image>
      <text class="text">{{t('mine.myOrder')}}</text>
      <image class="arrow" src="/static/images/arrow-right.png"></image>
    </view>

    <view class="menu-item" bindtap="goToAddress">
      <image class="icon" src="/static/images/address.png"></image>
      <text class="text">{{t('mine.address')}}</text>
      <image class="arrow" src="/static/images/arrow-right.png"></image>
    </view>

    <view class="menu-item" bindtap="goToInvite">
      <image class="icon" src="/static/images/myInvite.png"></image>
      <text class="text">{{t('mine.invite')}}</text>
      <image class="arrow" src="/static/images/arrow-right.png"></image>
    </view>

    <view class="menu-item" bindtap="goToSettings">
      <image class="icon" src="/static/images/settings.png"></image>
      <text class="text">{{t('mine.settings')}}</text>
      <image class="arrow" src="/static/images/arrow-right.png"></image>
    </view>

    <view class="menu-item" bindtap="goToAbout">
      <image class="icon" src="/static/images/about.png"></image>
      <text class="text">{{t('mine.about')}}</text>
      <image class="arrow" src="/static/images/arrow-right.png"></image>
    </view>
  </view>
</view> 