<view class="container">
  <!-- 用户信息 -->
  <view class="user-info">
    <block wx:if="{{userInfo}}">
      <image class="avatar" src="{{userInfo.avatarUrl}}" mode="aspectFill"/>
      <text class="nickname">{{userInfo.nickName}}</text>
    </block>
    <block wx:else>
      <image class="avatar" src="/static/images/default-avatar.png" mode="aspectFill"/>
      <button class="login-btn" bindtap="login">点击登录</button>
    </block>
  </view>

  <!-- 订单状态 -->
  <view class="order-stats">
    <view class="stat-item" bindtap="navigate" data-path="/pages/order/list?status=unpaid">
      <text class="num">{{orderStats.unpaid}}</text>
      <text class="label">待付款</text>
    </view>
    <view class="stat-item" bindtap="navigate" data-path="/pages/order/list?status=unshipped">
      <text class="num">{{orderStats.unshipped}}</text>
      <text class="label">待发货</text>
    </view>
    <view class="stat-item" bindtap="navigate" data-path="/pages/order/list?status=shipped">
      <text class="num">{{orderStats.shipped}}</text>
      <text class="label">待���货</text>
    </view>
    <view class="stat-item" bindtap="navigate" data-path="/pages/order/list?status=completed">
      <text class="num">{{orderStats.completed}}</text>
      <text class="label">已完成</text>
    </view>
  </view>

  <!-- 菜单列表 -->
  <view class="menu-list">
    <view 
      class="menu-item" 
      wx:for="{{menuList}}" 
      wx:key="name"
      bindtap="navigate"
      data-path="{{item.path}}"
    >
      <image class="menu-icon" src="{{item.icon}}" mode="aspectFit"/>
      <text class="menu-name">{{item.name}}</text>
      <image class="arrow" src="/static/images/arrow-right.png" mode="aspectFit"/>
    </view>
  </view>
</view> 