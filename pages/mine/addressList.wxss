.address-list {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.address-item {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}

.info {
  flex: 1;
}

.row {
  margin-bottom: 10rpx;
}

.name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-right: 20rpx;
}

.phone {
  font-size: 28rpx;
  color: #666;
}

.address {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.actions {
  display: flex;
  align-items: center;
}

.edit, .delete {
  padding: 20rpx;
}

.edit image, .delete image {
  width: 36rpx;
  height: 36rpx;
}

.empty {
  padding-top: 200rpx;
  text-align: center;
}

.empty image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty text {
  font-size: 28rpx;
  color: #999;
}

.add-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #AD2828;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
} 