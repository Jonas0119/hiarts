.invite {
  min-height: 100vh;
  background: #f5f5f5;
}

.header {
  position: relative;
  height: 300rpx;
}

.bg {
  width: 100%;
  height: 100%;
}

.content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: #fff;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  display: block;
}

.desc {
  font-size: 26rpx;
  opacity: 0.8;
}

.section {
  background: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}

.section-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.code-box, .link-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 6rpx;
}

.code, .link {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.copy-btn {
  min-width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #fff;
  background: #AD2828;
  border-radius: 30rpx;
}

.qrcode-box {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.qrcode {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 30rpx;
}

.save-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  background: #AD2828;
  border-radius: 40rpx;
}

.invited-list {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 10rpx;
}

.list {
  margin-top: 20rpx;
}

.item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.item:last-child {
  border-bottom: none;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.time {
  font-size: 26rpx;
  color: #999;
} 