.container {
  padding: 0;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background: #AD2828;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.nickname {
  color: #fff;
  font-size: 32rpx;
}

.login-btn {
  margin-top: 20rpx;
  background: transparent;
  border: 2rpx solid #fff;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 40rpx;
  border-radius: 30rpx;
}

.order-stats {
  display: flex;
  padding: 30rpx 0;
  background: #fff;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-item .num {
  display: block;
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.stat-item .label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.menu-list {
  background: #fff;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.menu-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
} 