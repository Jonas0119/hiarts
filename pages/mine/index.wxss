.mine {
  min-height: 100vh;
  background: #f5f5f5;
}

.user-info {
  background: #fff;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}

.info {
  margin-left: 30rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 10rpx;
}

.phone {
  font-size: 26rpx;
  color: #999;
}

.menu-list {
  margin-top: 20rpx;
  background: #fff;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
} 