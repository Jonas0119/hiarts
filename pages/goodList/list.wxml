<view class="container">
  <!-- 分类列表 -->
  <scroll-view class="categories" scroll-x>
    <view 
      class="category-item {{currentCategory === item.id ? 'active' : ''}}" 
      wx:for="{{categories}}" 
      wx:key="id"
      data-category="{{item.id}}"
      bindtap="changeCategory"
    >
      {{item.name}}
    </view>
  </scroll-view>

  <!-- 商品列表 -->
  <view class="goods-list">
    <view 
      class="goods-item" 
      wx:for="{{goodsList}}" 
      wx:key="id"
      data-id="{{item.id}}"
      bindtap="goToDetail"
    >
      <image class="goods-img" src="{{item.image}}" mode="aspectFill"/>
      <view class="goods-info">
        <text class="goods-name">{{item.name}}</text>
        <text class="goods-price">HK$ {{item.price}}</text>
      </view>
    </view>
  </view>

  <!-- 加载更多 -->
  <view class="loading" wx:if="{{loading}}">加载中...</view>
  <view class="no-more" wx:if="{{!hasMore && goodsList.length > 0}}">没有更多了</view>
  <view class="empty" wx:if="{{!loading && goodsList.length === 0}}">暂无商品</view>
</view> 