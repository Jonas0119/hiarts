<view class="container">
  <!-- 商品图片轮播 -->
  <swiper class="goods-swiper" indicator-dots="true" autoplay="true" circular="true">
    <swiper-item wx:for="{{goodsImages}}" wx:key="index">
      <image src="{{item}}" mode="aspectFill" class="goods-image"></image>
    </swiper-item>
  </swiper>

  <!-- 商品信息 -->
  <view class="goods-info">
    <view class="section">
      <view class="title">{{t('goodsDetail.saleTime')}}</view>
      <view class="content">{{goodsDetail.endTime}}</view>
    </view>

    <view class="section">
      <view class="title">{{t('goodsDetail.saleProgress')}}</view>
      <view class="content">
        <text>{{goodsDetail.buyedNum}}/{{goodsDetail.stockNum}}</text>
      </view>
    </view>

    <view class="section">
      <view class="title">{{t('goodsDetail.goodPrice')}}</view>
      <view class="content price">¥{{goodsDetail.targetAmount}}</view>
    </view>

    <view class="section">
      <view class="title">{{t('goodsDetail.num')}}</view>
      <view class="content">{{goodsDetail.stockNum}}</view>
    </view>
  </view>

  <!-- 店铺信息 -->
  <view class="shop-info">
    <view class="title">{{t('goodsDetail.shopinfor')}}</view>
    <view class="shop-content">
      <image src="{{goodsDetail.shopImage}}" mode="aspectFit" class="shop-logo"></image>
      <text class="shop-name">{{goodsDetail.shopName}}</text>
    </view>
  </view>

  <!-- 商品简介 -->
  <view class="goods-desc">
    <view class="title">{{t('goodsDetail.shotContent')}}</view>
    <view class="content">{{goodsDetail.targetContent}}</view>
  </view>

  <!-- 购买须知 -->
  <view class="buy-notice">
    <view class="title">{{t('goodsDetail.tips')}}</view>
    <view class="content">{{tips}}</view>
  </view>

  <!-- 商品详情 -->
  <view class="goods-detail">
    <view class="title">{{t('goodsDetail.description')}}</view>
    <rich-text nodes="{{goodsDetail.targetDesc}}"></rich-text>
  </view>

  <!-- 底部购买栏 -->
  <view class="buy-bar">
    <view class="buy-num">
      <text class="label">{{t('goodsDetail.buyNum')}}</text>
      <input type="number" value="{{buyNum}}" bindinput="onNumChange" />
    </view>
    <button class="buy-btn" bindtap="onBuyTap">{{t('goodsDetail.buy')}}</button>
  </view>
</view> 