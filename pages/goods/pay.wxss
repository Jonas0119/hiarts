.order {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 140rpx;
}

.fdr {
  flex-direction: row;
  margin-bottom: 20rpx;
  display: flex;
}

.uni-navigate-item {
  justify-content: flex-start;
  border-bottom: 2rpx solid #e9e9e9;
  padding: 20rpx;
  line-height: normal;
  display: flex;
  background: #fff;
}

.uni-navigate-item .image {
  height: 180rpx;
}

.words {
  width: 70%;
  margin-left: 60rpx;
  position: relative;
}

.words .fdr {
  justify-content: space-between;
  display: flex;
}

.words .t1 {
  font-weight: 600;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #333;
  padding-top: 10rpx;
}

.words .t2 {
  color: #AD2828;
  font-size: 32rpx;
}

.words .t3 {
  font-size: 26rpx;
  color: #666;
}

.fff {
  padding: 40rpx;
  border-bottom: 2rpx solid #e9e9e9;
  background: #fff;
}

.fff .fdr {
  justify-content: space-between;
  display: flex;
}

.t4 {
  font-size: 24rpx;
  color: #999;
  line-height: 56rpx;
}

.fff .t5 {
  font-size: 36rpx;
  color: #AD2828;
}

.takeForm {
  margin-top: 20rpx;
  padding: 30rpx;
  background: #fff;
}

.takeTitle {
  color: #333;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.takeForm .ffr {
  justify-content: space-between;
  line-height: 80rpx;
  display: flex;
}

.takeForm .t6 {
  color: #333;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.takeForm .t7 {
  display: flex;
  font-size: 26rpx;
  align-items: center;
}

.addressList {
  line-height: 50rpx;
  padding: 20rpx 0;
}

.addressList .t1 {
  font-size: 24rpx;
}

.addressList .t3 {
  font-size: 24rpx;
}

.uni-icon-size {
  width: 40rpx;
}

.takebtn {
  background-color: #AD2828;
  font-size: 36rpx;
  color: #fff;
  width: 600rpx;
  margin: 200rpx auto;
}

.address-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
}

.popup-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.popup-content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
  max-height: 70vh;
  overflow-y: auto;
}

.addressBox {
  padding: 30rpx;
}

.addressItem {
  border-bottom: 2rpx solid #e3e3e3;
  padding: 20rpx;
}

.addressItem.chosed {
  background: #e9e9e9;
}

.addressbtn {
  background-color: #AD2828;
  font-size: 28rpx;
  color: #fff;
  width: 400rpx;
  margin: 60rpx auto 20rpx;
}

.payMethod {
  margin-top: 20rpx;
  padding: 20rpx;
}

.payMethodList {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.payMethodItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border: 2rpx solid #eee;
  border-radius: 10rpx;
  width: 240rpx;
  height: 200rpx;
}

.payMethodItem.active {
  border-color: #AD2828;
  background-color: #fff5f5;
}

.payIcon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 16rpx;
  flex-shrink: 0;
}

.payText {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  width: 100%;
  line-height: 1.4;
  display: block;
  white-space: nowrap;
}

/* 地址样式 */
.address-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  border: 2rpx solid #eee;
}

.address-info {
  flex: 1;
  padding-right: 20rpx;
}

.address-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.address-contact {
  font-size: 26rpx;
  color: #666;
}

.no-address {
  font-size: 28rpx;
  color: #999;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 提交按钮样式 */
.submit-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 40rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  background-color: #AD2828;
  font-size: 32rpx;
  color: #fff;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
} 