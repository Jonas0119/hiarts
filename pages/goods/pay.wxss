.order {
  background: #f5f5f5;
  min-height: 100vh;
}

.fdr {
  flex-direction: row;
  margin-bottom: 20rpx;
  display: flex;
}

.uni-navigate-item {
  justify-content: flex-start;
  border-bottom: 2rpx solid #e9e9e9;
  padding: 20rpx;
  line-height: normal;
  display: flex;
  background: #fff;
}

.uni-navigate-item .image {
  height: 180rpx;
}

.words {
  width: 70%;
  margin-left: 60rpx;
  position: relative;
}

.words .fdr {
  justify-content: space-between;
  display: flex;
}

.words .t1 {
  font-weight: 600;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #333;
  padding-top: 10rpx;
}

.words .t2 {
  color: #AD2828;
  font-size: 32rpx;
}

.words .t3 {
  font-size: 26rpx;
  color: #666;
}

.fff {
  padding: 40rpx;
  border-bottom: 2rpx solid #e9e9e9;
  background: #fff;
}

.fff .fdr {
  justify-content: space-between;
  display: flex;
}

.t4 {
  font-size: 24rpx;
  color: #999;
  line-height: 56rpx;
}

.fff .t5 {
  font-size: 36rpx;
  color: #AD2828;
}

.takeForm {
  margin-top: 20rpx;
}

.takeTitle {
  color: #333;
  font-size: 30rpx;
  line-height: 80rpx;
}

.takeForm .ffr {
  justify-content: space-between;
  line-height: 80rpx;
  display: flex;
}

.takeForm .t6 {
  color: #333;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.takeForm .t7 {
  display: flex;
  font-size: 26rpx;
  align-items: center;
}

.addressList {
  line-height: 50rpx;
  padding: 20rpx 0;
}

.addressList .t1 {
  font-size: 24rpx;
}

.addressList .t3 {
  font-size: 24rpx;
}

.uni-icon-size {
  width: 40rpx;
}

.takebtn {
  background-color: #AD2828;
  font-size: 36rpx;
  color: #fff;
  width: 600rpx;
  margin: 200rpx auto;
}

.address-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
}

.popup-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.popup-content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
  max-height: 70vh;
  overflow-y: auto;
}

.addressBox {
  padding: 30rpx;
}

.addressItem {
  border-bottom: 2rpx solid #e3e3e3;
  padding: 20rpx;
}

.addressItem.chosed {
  background: #e9e9e9;
}

.addressbtn {
  background-color: #AD2828;
  font-size: 28rpx;
  color: #fff;
  width: 400rpx;
  margin: 60rpx auto 20rpx;
} 