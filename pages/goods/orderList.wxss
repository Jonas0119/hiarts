.orderfdr {
  flex-direction: row;
  line-height: 60rpx;
  margin-bottom: 10rpx;
}

.uni-navigate-item .image {
  height: 180rpx;
}

.words {
  width: 70%;
  margin-left: 30px;
  position: relative;
}

.uni-navigate-item {
  justify-content: flex-start;
  border-bottom: 1px solid #e9e9e9;
  padding: 20rpx;
  display: flex;
}

.words .t1 {
  font-weight: 600;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #333;
  padding-top: 10rpx;
}

.words .state {
  position: absolute;
  color: #AD2828;
  font-size: 24rpx;
  right: 0;
  top: 0;
  line-height: 50rpx;
}

.words .t3 {
  font-size: 26rpx;
  color: #333;
}

.words .t4 {
  font-size: 24rpx;
  color: #999;
}

.words .t5 {
  font-size: 36rpx;
  color: #AD2828;
}

.words .orderbtn {
  width: 144rpx;
  font-size: 24rpx;
  padding: 0;
  border-radius: 24rpx;
  border: 1px solid #D2D2D2;
  background: none;
  padding: 0 34rpx;
  display: inline-block;
  line-height: 48rpx;
  text-align: center;
}

.nodata {
  width: 100%;
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #999;
} 