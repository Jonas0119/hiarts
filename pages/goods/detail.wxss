.page {
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.swiper-box {
  width: 100%;
  height: 750rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.container {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.t1 {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.fdr {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}

.t2 {
  font-size: 28rpx;
  color: #333;
}

.t4 {
  font-size: 26rpx;
  color: #999;
  margin-right: 10rpx;
}

.t5 {
  font-size: 26rpx;
  color: #999;
  margin-right: 10rpx;
}

.t6 {
  font-size: 32rpx;
  color: #AD2828;
  font-weight: 500;
}

.price-info {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}

.shop-info {
  background: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.shop-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.shop-name {
  display: flex;
  flex-direction: column;
}

.shop-descrip {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

.content-section {
  margin-bottom: 20rpx;
}

.title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.tips {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
}

.t8 {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 20rpx;
}

.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.num-input {
  margin-bottom: 20rpx;
}

.input {
  flex: 1;
  height: 60rpx;
  border: 1rpx solid #eee;
  border-radius: 6rpx;
  padding: 0 20rpx;
  margin-left: 20rpx;
}

.buy-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #AD2828;
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
} 