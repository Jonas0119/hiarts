.login {
  min-height: 100vh;
  background: #fff;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 400rpx;
  margin-bottom: 80rpx;
}

.input-group {
  width: 100%;
  margin-bottom: 60rpx;
}

.input-item {
  width: 100%;
  height: 100rpx;
  background: #f8f8f8;
  border-radius: 50rpx;
  margin-bottom: 30rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.input-item input {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  color: #333;
}

.input-item.code {
  padding-right: 20rpx;
}

.send-code {
  min-width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #AD2828;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  border-radius: 30rpx;
}

.send-code.disabled {
  background: #ccc;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #AD2828;
  color: #fff;
  font-size: 32rpx;
  border-radius: 50rpx;
  margin-bottom: 40rpx;
}

.agreement {
  font-size: 26rpx;
}

.agree-text {
  color: #666;
}

.link {
  color: #00509F;
}

checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
} 